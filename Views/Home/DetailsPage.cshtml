<style>
    .section-main {
    }
    body {
        background: rgb(253, 242, 242);
        font-family: "Roboto", sans-serif;
        font-weight: 400;
        font-style: normal;
    }
    .wrapper {
        width:100%;
        display:flex;
        flex-direction:column;
    }

    .follow {
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:10px;
    }

    .section-main {
        display:flex;
        justify-content:space-between;
        gap: 20px;
    }

    .section-main-aside {
        width: 25vw;
        background: red;
    }

    .map, .other-locations {
        height: 484px;
    }

    .section-main-container {
        width: 70vw;
        display:flex;
        flex-direction:column;
        border:1px solig grey;
        filter:drop-shadow(0 0 0.75rem lightgrey);
    }

    .aqi {
        background:lightgreen;
        width:100%;
        display:flex;
        justify-content:space-between;
        gap:30px;
    }

    .aqi-level, .aqi-icon {
        padding: 20px;
        margin: 30px;
    }

    .aqi-level {
        width: 125px;
        color:white;
        background:green;
        text-align:left;
        opacity:0.66;
        border-radius:3px;
    }

    .aqi-main {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .uppercase {
        text-transform:uppercase;
        font-size:14px;
        letter-spacing:.1rem;
    }

    .overview {
        padding:20px;
        background: white;
    }

    table {
        margin:30px 0;
        width:100%;
        font-size: 14px;
        border: 2px solid darkgrey;
        box-shadow: 2px 2px 3px darkgrey;
    }
    
    th {
        padding: 15px;
        background:lightgrey;
        border: 2px solid darkgrey;
  
    }
    td {
        padding: 15px;
        border: 2px solid darkgrey;
    }

    .bar-table {
        width: 100%;
        border:none;
        border-collapse: collapse;
    }

    .bar-table th, .bar-table td {
        text-align: left;
        padding: 10px;
    }

    .bar-table th {
        background-color: #f4f4f4;
        font-size: 14px;
    }

    .bar-table td {
        vertical-align: middle;
    }

    .bar-table th:nth-child(odd){
        width:20%;
    }

    .progress-container {
        position: relative;
        height: 8px;
        width: 100%;
        background-color: #e8e8e8;
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background-color: #8bc34a;
        border-radius: 4px;
    }

    .concentration {
        font-weight: bold;
    }

    .recomendation-content {
        display:flex;
        justify-content:space-between;
        align-content:center;
        gap:10%;
        padding:20px;
        flex-wrap:wrap;

    }
    .advice{
        flex:45%;
    }

    .section-forecast {
        width:100%;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .forecast h2 {
        margin-top: 0;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    thead th {
        background-color: #f8f8f8;
        color: #555;
        padding: 10px;
        text-align: left;
        border-bottom: 2px solid #ddd;
    }

    tbody td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .medium {
        background-color: #ffe58a;
        color: #333;
        padding: 5px 10px;
        border-radius: 4px;
        text-align: center;
    }

    .good {
        background-color: #a8e6a3;
        color: #333;
        padding: 5px 10px;
        border-radius: 4px;
        text-align: center;
    }

    .highlight {
        background-color: #f1f8ff;
    }

    tbody tr:hover {
        background-color: #f8f8f8;
    }
</style>

